<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Đại lý bánh kẹo - Quản lý</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container">
      <a class="navbar-brand" href="/">Đại lý bánh kẹo</a>
      <span class="navbar-text">Quản lý đơn hàng</span>
    </div>
  </nav>
  <div class="container">
    <h2 class="mb-4">Đơn hàng mới</h2>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Khách hàng</th>
          <th>SĐT</th>
          <th>Địa chỉ</th>
          <th>Sản phẩm</th>
          <th>Thời gian</th>
          <th>Trạng thái</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td><%= order.customerName %></td>
            <td><%= order.customerPhone %></td>
            <td><%= order.customerAddress %></td>
            <td>
              <ul>
                <% order.items.forEach(item => { %>
                  <li><%= item.name %> x <%= item.qty %></li>
                <% }) %>
              </ul>
            </td>
            <td><%= new Date(order.createdAt).toLocaleString() %></td>
            <td><span class="badge bg-warning text-dark"><%= order.status %></span></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <h3 class="mt-5">Danh sách sản phẩm</h3>
    <div class="row">
      <% products.forEach(product => { %>
        <div class="col-md-4 col-sm-6 mb-4">
          <div class="card h-100">
            <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><%= product.description %></p>
              <p class="card-text fw-bold text-danger">Giá: <%= product.price %> VND</p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
